{
  "manifest_version": 3,
  "name": "GitHub Secrets Scanner",
  "version": "1.0",
  "description": "Scans GitHub repositories for exposed .env files and keys.",
  "icons": {
    "128": "image.png"
  },
  "action": {
    "default_title": "Scan Repository",
    "default_icon": {
      "128": "image.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ]
}